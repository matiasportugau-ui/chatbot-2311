# Environment variables for the BMC Dashboard

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3001/api
NEXT_PUBLIC_WS_URL=ws://localhost:3001/ws

# Authentication
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-here

# Database
DATABASE_URL=postgresql://username:password@localhost:5432/bmc_dashboard

# External Services
OPENAI_API_KEY=your-openai-api-key
MONGODB_URI=mongodb://localhost:27017/bmc_dashboard
GOOGLE_SHEETS_API_KEY=your-google-sheets-api-key
WHATSAPP_API_TOKEN=your-whatsapp-api-token

# Monitoring
SENTRY_DSN=your-sentry-dsn
ANALYTICS_ID=your-analytics-id

# Feature Flags
NEXT_PUBLIC_ENABLE_AI_INSIGHTS=true
NEXT_PUBLIC_ENABLE_REAL_TIME_MONITORING=true
NEXT_PUBLIC_ENABLE_EXPORT_IMPORT=true

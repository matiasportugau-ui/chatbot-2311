{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "pip install -r requirements.txt && python3 -m playwright install chromium"
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "bash -c \"bash scripts/refresh_knowledge.sh && python api_server.py\"",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "healthcheckPath": "/health",
    "healthcheckTimeout": 30
  }
}
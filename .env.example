# ============================================================================
# BMC Chatbot - Environment Variables Example
# ============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!
#
# Usage:
#   cp .env.example .env
#   nano .env  # Edit with your values
# ============================================================================

# ============================================================================
# OpenAI Configuration (REQUIRED)
# ============================================================================
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini

# ============================================================================
# Database Configuration (REQUIRED)
# ============================================================================
# Railway: Use ${{MongoDB.MONGO_URL}}
# MongoDB Atlas: Get from cluster connect button
MONGODB_URI=mongodb://localhost:27017/bmc_chat

# ============================================================================
# Server Configuration
# ============================================================================
PORT=8000
HOST=0.0.0.0
ENVIRONMENT=production

# ============================================================================
# Frontend Configuration
# ============================================================================
# Your Railway API URL after deployment
NEXT_PUBLIC_API_URL=https://your-app.railway.app

# ============================================================================
# WhatsApp Business API (Optional)
# ============================================================================
# Get from Meta Business Suite: https://developers.facebook.com
WHATSAPP_VERIFY_TOKEN=your-verify-token-here
WHATSAPP_ACCESS_TOKEN=your-whatsapp-access-token
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id

# ============================================================================
# Google Sheets Integration (Optional)
# ============================================================================
# Service account credentials (JSON format)
GOOGLE_SHEETS_CREDENTIALS={"type":"service_account","project_id":"..."}
GOOGLE_SHEET_ID=your-google-sheet-id

# ============================================================================
# Security (Production)
# ============================================================================
# CORS allowed origins (comma-separated, no wildcards in production)
CORS_ALLOWED_ORIGINS=https://grow-importa.com.uy,https://your-app.vercel.app

# JWT Secret Key (generate with: openssl rand -hex 32)
JWT_SECRET_KEY=change-this-to-a-random-secret-key-at-least-32-chars

# JWT token expiration in minutes
ACCESS_TOKEN_EXPIRE_MINUTES=60

# API Keys for webhook authentication (comma-separated)
API_KEYS=your-api-key-1,your-api-key-2

# Admin password (for protected endpoints)
ADMIN_PASSWORD=change-this-secure-password

# WhatsApp webhook secret for signature validation
WHATSAPP_WEBHOOK_SECRET=your-webhook-secret-from-meta

# n8n credentials (should be set via Docker secrets in production)
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=change-this-secure-password

# ============================================================================
# Optional: Third-party Services
# ============================================================================
# Sentry for error tracking
SENTRY_DSN=your-sentry-dsn

# Stripe for payments (if implementing)
STRIPE_SECRET_KEY=sk_test_your-stripe-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-key

# ============================================================================
# Development Only
# ============================================================================
# Enable debug mode (shows detailed errors)
DEBUG=false

# Enable hot reload
RELOAD=false
